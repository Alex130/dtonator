<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="com.bizo" module="dtonator">
    <license name="Apache Software License"/>
  </info>

  <configurations>
    <conf name="default" extends="compile"/>
    <conf name="compile"/>
    <conf name="test" visibility="private"/>
    <conf name="sources"/>
  </configurations>

  <dependencies defaultconfmapping="sources->sources();%->default" defaultconf="compile;sources">
    <dependency org="commons-lang" name="commons-lang" rev="2.6"/>
    <dependency org="org.apache.commons" name="commons-lang3" rev="3.6"/>
    <dependency org="commons-beanutils" name="commons-beanutils" rev="1.8.2"/>
    <dependency org="org.yaml" name="snakeyaml" rev="1.8"/>
    <dependency org="joist" name="joist-util" rev="1.9.1" />

    <!-- test time only dependencies -->
    <dependency org="junit" name="junit-dep" rev="4.10" conf="test"/>
    <dependency org="org.hamcrest" name="hamcrest-junit" rev="2.0.0.0" conf="test"/>
  </dependencies>
</ivy-module>
